    padding-right: 12px;
    font-size: 16px;
    border-right: 1.5px solid @accent;
    border-radius: 20px;
}
#pulseaudio {
    margin-left: 8px;
    margin-right: 0px;
    padding-left: 10px;
    font-size: 14px;
    border-right: 1.5px solid @accent;
    border-radius: 20px;
}

#network {
    margin-left: 8px;
    margin-right: 0px;
    padding-left: 10px;
    font-size: 14px;
    border-right: 1.5px solid @accent;
    border-radius: 20px;
}
#memory {
    margin-left: 8px;
    margin-right: 0px;
    padding-left: 10px;
    font-size: 14px;
    border-right: 1.5px solid @accent;
    border-radius: 20px;
}
