window#waybar.empty #window {
    opacity: 0;
    background: transparent;
    border: none;
    box-shadow: none;
    padding: 0;
    margin: 0;
}
#custom-update,
#custom-omarchy,
#custom-screenrecording-indicator {
    min-width: 12px;
    margin: 0 7.5px;
}
#custom-update {
    margin-left: 8px;
    margin-right: 0px;
    font-size: 16px;
}
#custom-omarchy {
    border-right: none;
    padding-right: 2px;
    font-size: 16px;
    margin: 0 12px;
}

