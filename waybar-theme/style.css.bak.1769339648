@import "../omarchy/current/theme/waybar.css";

* {
    background-color: transparent;
    color: @foreground;
    font-family: "JetBrainsMono Nerd Font Mono", "JetBrainsMono Nerd Font", monospace;
    font-size: 14px;
}
window#waybar {
    border-radius: 20px;
    background-color: @background;
    border-left: 1.5px solid @accent;
    border-right: none;
}

.modules-left {
    margin-left: 2px;
    background: @background;
    border-radius: 20px;
}

.modules-center {
    background: @background;
    padding: 0 15px;
    /*border-left: 1px solid @foreground;
    border-right: 1px solid @foreground;*/

    border-bottom: 2px solid @accent;
    border-radius: 20px;
}

.modules-right {
    margin-right: 0px;
    padding-right: 0px;
    background: @background;
    border-radius: 20px;
}

/* Remove the trailing gap when the last module has a right margin */
.modules-right > widget:last-child > * {
    margin-right: 0px;
    padding-right: 0px;
}

#workspaces button {
    all: initial;
    padding: 0px 12px;
    margin: 0 0px;
    min-width: 9px;
    border-left: 1.5px solid @accent;
    border-radius: 20px;

    /*border-radius: 3px;*/
    transition: padding 0.28s ease-in-out, min-width 0.28s ease-in-out, background-color 0.28s ease-in-out, opacity 0.28s ease-in-out;
}

#workspaces button.active {
    background-color: alpha(@accent, 0.16);
}
#workspaces button.empty {
    opacity: 0.5;
    /*background: transparent;*/
}
#workspaces button:hover {
    background-color: alpha(@accent, 0.12);
    padding: 0px 22px;
    min-width: 13px;
}
