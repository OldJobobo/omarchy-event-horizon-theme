@import "../omarchy/current/theme/waybar.css";

* {
    background-color: transparent;
    color: @foreground;
    font-family: "JetBrainsMono Nerd Font Mono", "JetBrainsMono Nerd Font", monospace;
    font-size: 14px;
}

window#waybar {
    border-radius: 20px;
    background-color: @background;
    border-left: 1.5px solid @accent;
    border-right: none;
}

.modules-left,
.modules-center,
.modules-right {
    background: @background;
    border-radius: 20px;
}

.modules-left {
    margin-left: 2px;
}

.modules-center {
    padding: 0 15px;
    border-bottom: 2px solid @accent;
}

.modules-right {
    margin-right: 0;
    padding-right: 0;
}

/* Remove the trailing gap when the last module has a right margin */
.modules-right > widget:last-child > * {
    margin-right: 0;
    padding-right: 0;
}

#workspaces button {
    all: initial;
    padding: 0 12px;
    margin: 0;
    min-width: 9px;
    border-left: 1.5px solid @accent;
    border-radius: 20px;
    transition:
        padding 0.28s ease-in-out,
        min-width 0.28s ease-in-out,
        background-color 0.28s ease-in-out,
        opacity 0.28s ease-in-out;
}

#workspaces button.active {
    background-color: alpha(@accent, 0.16);
}

#workspaces button.empty {
    opacity: 0.5;
}

#workspaces button:hover {
    background-color: alpha(@accent, 0.12);
    padding: 0 22px;
    min-width: 13px;
}

window#waybar.empty #window {
    opacity: 0;
    background: transparent;
    border: none;
    box-shadow: none;
    padding: 0;
    margin: 0;
}
#custom-update,
#custom-omarchy,
#custom-screenrecording-indicator {
    min-width: 12px;
    margin: 0 7.5px;
}

#custom-update {
    margin-left: 8px;
    margin-right: 0;
    font-size: 16px;
}

#custom-omarchy {
    border-right: none;
    padding-right: 2px;
    font-size: 16px;
    margin: 0 12px;
}

#tray {
    margin-right: 0;
    padding-right: 12px;
    border-right: 1.5px solid @accent;
    border-radius: 20px;
}

#bluetooth,
#pulseaudio,
#network,
#memory {
    margin-left: 8px;
    margin-right: 0;
    padding-left: 10px;
    padding-right: 12px;
    font-size: 14px;
    border-right: 1.5px solid @accent;
    border-radius: 20px;
}

#bluetooth {
    padding-left: 12px;
    padding-right: 12px;
    font-size: 16px;
}

#pulseaudio {
    padding-left: 10px;
}

#network {
    padding-right: 10px;
}

#custom-expand-icon {
    margin-right: 18px;
}

tooltip {
    border: none;
    border-left: 1px solid @accent;
    border-right: 1px solid @accent;
    border-bottom: 2.5px solid @accent;
    background-color: @background;
    border-radius: 20px;
    padding: 2px;
}

#clock {
    font-size: 14px;
}

.hidden {
    opacity: 0;
}

#custom-screenrecording-indicator {
    min-width: 12px;
    margin-right: 0;
    margin-top: 0;
    font-size: 16px;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

#custom-screenrecording-indicator.active {
    color: @foreground;
    animation-name: blink-recording;
    animation-duration: 0.7s;
}

@keyframes blink-recording {
    to {
        color: @background;
    }
}
